{
  "name": "collatex-root",
  "private": true,
  "workspaces": [
    "apps/collab_gateway",
    "apps/frontend"
  ],
  "scripts": {
    "test": "npm run -s test:frontend && npm run -s test:gateway",
    "test:frontend": "cross-env CI=1 vitest run --reporter=basic",
    "test:gateway": "cross-env CI=1 jest --watchAll=false --runInBand --colors",
    "test:ci": "npm run -s test"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
